<div class="jumbotron"> 
  <div class="container">  
    <div id="header" class="col-md-12">
      <h1>Eat Da Burger!</h1>
        <h3>(not to be confused with Burger Time)</h3>
          <img src="assets/img/burgertime.jpg"></img>
    </div>
  </div><!--end container-->
</div><!--end jumbotron-->

<div class="container">
    <div class="row">
      <div id="menu" class="col-md-4">
        <h2>On the menu!</h2>
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                {{this.burger_name}}

                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button type="submit" class="submit">Devour it!!</button>
                </form>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
      </div>


      <div id="add" class="col-md-4">
        <h2>Add a Burger</h2>
          <form class="create-update-form" action="burgers/create" method="POST">
            <div class="add form-group">
              <label for="burg">Burger Name:</label>
                <input type="text" id="burg" name="burger_name">
            </div>
            <button type="submit" class="submit">Add Burger</button>
          </form>
      </div>

      <div id="eaten" class="col-md-4">
        <h2>Devoured burgers</h2>
        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              <li>
                {{this.burger_name}}
                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="false">
                </form>
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
 

</div><!--end container-->
  <footer class="footer">
      <small>&copy;Copyright Jennifer Pemberton 2016</small>
 </footer>

  


